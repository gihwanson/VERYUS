rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(
//    /databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin;
service firebase.storage {
  match /b/{bucket}/o {
    // Images: 누구나 읽을 수 있고, 로그인한 사용자는 업로드 가능
    match /images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Posts: 누구나 읽을 수 있고, 로그인한 사용자는 업로드 가능
    match /posts/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Recordings: 누구나 읽을 수 있고, 모든 사용자가 업로드 가능 (임시)
    match /recordings/{allPaths=**} {
      allow read: if true;
      allow write: if true;
    }
    
    // Profile pics: 누구나 읽을 수 있고, 로그인한 사용자는 업로드 가능
    match /profile-pics/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Profiles: 기존 프로필 경로도 지원
    match /profiles/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null || 
                     (resource == null && request.resource != null);
    }
    
    // Videos: 누구나 읽을 수 있고, 로그인한 사용자는 업로드 가능
    match /videos/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
} 