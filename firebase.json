{
  "hosting": {
    "public": "build", 
    "rewrites": [
      {
        "source": "/uploads/**",
        "function": "api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions"
  },
  "storage": {
    "rules": "storage.rules"
  }
}
